(defcfg
process-unmapped-keys yes
    linux-dev-names-include (
;;      "FRMW0001:00 32AC:0006 Consumer Control"
      "AT Translated Set 2 keyboard"
    )
  )
(defsrc spc h j k l bspc ralt)
(defalias spc 
  (tap-hold-press 100 100 spc (layer-while-held arrows) )
)

(defalias ralt (tap-hold-press 100 100 ret ralt))

(deflayer base   @spc   h    j    k    l bspc @ralt)
(deflayer arrows _    left   down up right del ralt)

