(defcfg
process-unmapped-keys yes
    linux-dev-names-include (
;;      "FRMW0001:00 32AC:0006 Consumer Control"
      "AT Translated Set 2 keyboard"
    )
  )
(defsrc spc h j k l bspc ralt lsft)
(defalias spc 
  (tap-hold-release 200 200 spc (layer-while-held arrows) )
)
(defalias lsft
  (tap-hold-press 1 200 esc lsft)
)

(defalias ralt (tap-hold-press 100 1000 ret ralt))

(deflayer base   @spc   h    j    k    l bspc @ralt @lsft)
(deflayer arrows _    left   down up right del del lsft)

